{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z]{2}$"
      },
      "name": {
        "type": "string"
      },
      "geometry": {
        "type": "object"
      }
    },

    "additionalProperties": false,
    "required": ["id", "name", "geometry"],

    "links": [{
      "rel": "full",
      "href": "{id}"
    }]
  },
}
