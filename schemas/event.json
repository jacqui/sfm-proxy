{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://www.example.com/schemas/event.json#",
  "title": "Event",
  "type": "object",
  "properties": {
    "gid": {
      "type": "integer"
    },
    "row": {
      "type": "integer"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[1-5][a-f0-9]{3}-[89ab][a-f0-9]{3}-[a-f0-9]{12}$"
    },
    "date": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "pattern": "^[0-9]{4}(-[0-9]{2}){0,2}$"
        }
      },

      "additionalProperties": false,
      "required": ["value"]
    },
    "location_name": {
      "$ref": "#/definitions/simple_string"
    },
    "location_admin_level_1": {
      "$ref": "#/definitions/simple_string"
    },
    "location_admin_level_2": {
      "$ref": "#/definitions/simple_string"
    },
    "location_geonames_name": {
      "$ref": "#/definitions/simple_string"
    },
    "location_geonames_id": {
      "type": "object",
      "properties": {
        "value": {
          "type": "integer"
        }
      },

      "additionalProperties": false,
      "required": ["value"]
    },
    "location_coordinates": {
      "type": "object",
      "properties": {
        "value": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "maxItems": 2,
          "minItems": 2
        }
      },

      "additionalProperties": false,
      "required": ["value"]
    },
    "classification": {
      "type": "object",
      "properties": {
        "value": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Arbitrary Detention",
              "Assault",
              "Attacking Hospital",
              "Beating",
              "Disappearance",
              "Illegal Detention",
              "Inhuman detention",
              "Killing",
              "Restricting freedom of speech and press",
              "Restricting of freedom of association",
              "Torture",
              "Use of Child Soldiers"
            ]
          }
        }
      },

      "additionalProperties": false,
      "required": ["value"]
    },
    "description": {
      "$ref": "#/definitions/simple_string"
    },
    "perpretrator_name": {
      "$ref": "#/definitions/simple_string"
    },
    "perpetrator_organization": {
      "type": "object",
      "properties": {
        "id": {
          "type": "object",
          "properties": {
            "value": {
              "type": "string"
            },
            "sources": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },

          "additionalProperties": false,
          "required": ["value"]
        }
      },

      "additionalProperties": false,
      "required": ["id"]
    }
  },

  "additionalProperties": false,
  "required": [
    "gid",
    "row",
    "id",
    "date",
    "classification",
    "description",
    "perpetrator_organization"
  ],

  "definitions": {
    "simple_string": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        }
      },

      "additionalProperties": false,
      "required": ["value"]
    }
  }
}
